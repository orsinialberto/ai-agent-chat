# OAuth Mock Server Configuration
# Copy this file to oauth-config.yml and customize for your environment
# This configuration is OPTIONAL and only needed if using MCP with authentication

oauth:
  # Base URL of the OAuth mock server
  mock_server_url: 'http://localhost:9000'
  
  # OAuth token endpoint path
  token_endpoint: '/oauth/token'
  
  # Request timeout in milliseconds
  timeout: 5000
  
  # Client credentials (optional, for OAuth 2.0 client credentials flow)
  # client_id: 'ai-agent-chat'
  # client_secret: 'your_secret_here'

